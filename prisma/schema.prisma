generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  userId        Int     @id @default(autoincrement())
  kakaoId       Int?           
  name          String        
  email         String         @unique
  password      String?         
  Role          String         @default("user")
  gender        gender
  age           Int?
  oneliner      String?         
  createdAt     DateTime       @default(now()) 
  updatedAt     DateTime       @updatedAt 
  

  @@map("users")
}

enum gender {
  male
  female
}